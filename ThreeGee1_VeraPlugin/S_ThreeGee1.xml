<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
	<specVersion>
		<major>1</major>
		<minor>0</minor>
	</specVersion>
	<serviceStateTable>
		<stateVariable>
			<name>Received</name>
			<datatype>string</datatype>
		</stateVariable>
		<stateVariable>
			<name>GatewayTimeout</name>
			<datatype>number</datatype>
		</stateVariable>
		<stateVariable>
			<name>PingFrequency</name>
			<datatype>number</datatype>
			<defaultValue>30</defaultValue>
		</stateVariable>
		<stateVariable>
			<name>PingTimeout</name>
			<datatype>number</datatype>
			<defaultValue>120</defaultValue>
		</stateVariable>
		<stateVariable>
			<name>LastUpdate</name>
			<datatype>string</datatype>
		</stateVariable>
		<stateVariable>
			<name>IPAddress</name>
			<datatype>string</datatype>
			<defaultValue>google.com</defaultValue>
		</stateVariable>
		<stateVariable>
			<name>InternetPing</name>
			<datatype>number</datatype>
		</stateVariable>
		<stateVariable>
			<name>IpRepeatTries</name>
			<datatype>number</datatype>
		</stateVariable>
	</serviceStateTable>
	<actionList>
		<action>
			<name>Send</name>
			<argumentList>
				<argument>
					<name>Message</name>
					<direction>in</direction>
					<relatedStateVariable>string</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetGatewayTimeout</name>
			<argumentList>
				<argument>
					<name>GatewayTimeout</name>
					<direction>in</direction>
					<relatedStateVariable>number</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetPingFrequency</name>
			<argumentList>
				<argument>
					<name>PingFrequency</name>
					<direction>in</direction>
					<relatedStateVariable>number</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetPingTimeout</name>
			<argumentList>
				<argument>
					<name>PingTimeout</name>
					<direction>in</direction>
					<relatedStateVariable>number</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetIPAddress</name>
			<argumentList>
				<argument>
					<name>IPAddress</name>
					<direction>in</direction>
					<relatedStateVariable>string</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetInternetPing</name>
			<argumentList>
				<argument>
					<name>InternetPing</name>
					<direction>in</direction>
					<relatedStateVariable>number</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

		<action>
			<name>SetIpRepeatTries</name>
			<argumentList>
				<argument>
					<name>IpRepeatTries</name>
					<direction>in</direction>
					<relatedStateVariable>number</relatedStateVariable>
				</argument>
			</argumentList>
		</action>

	</actionList>
</scpd>
